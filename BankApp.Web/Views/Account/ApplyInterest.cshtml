
@{
    ViewData["Title"] = "Apply interest";
}

<section class="testimonials text-center bg-light">
    <div class="container">

        <h1>Apply interest</h1>

        <form asp-controller="Account" asp-action="ApplyInterest" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Account id:</label>
                <input type="number" class="form-control" name="accountId" style="text-align:center;" aria-describedby="emailHelp" required placeholder="Enter Account Id...">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Amount:</label>
                <input type="number" step="0.01" class="form-control" name="rate" style="text-align:center;" required placeholder="Enter interest rate...(%)">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Last time applied:</label>
                <input type="date" min="2013-10-01" max="@DateTime.Now" class="form-control" name="lastTimeApplied" style="text-align:center;" required">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <br />
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success" role="alert">
                @Html.Raw(TempData["success"])
            </div>
        }

        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @Html.Raw(TempData["error"])
            </div>
        }
    </div>

</section>