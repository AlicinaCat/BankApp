@{
    ViewData["Title"] = "Withdraw";
}

<section class="testimonials text-center bg-light">
    <div class="container">


        <h1>Withdraw</h1>

        <form asp-controller="Account" asp-action="Withdraw" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Account id:</label>
                <input type="number" class="form-control" name="accountId" style="text-align:center;" required aria-describedby="emailHelp" placeholder="Enter Account Id...">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Amount:</label>
                <input type="number" step="0.01" class="form-control" name="amount" min="0.01" style="text-align:center;" required placeholder="Enter amount...">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <br />
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success" role="alert">
                @Html.Raw(TempData["success"])
            </div>
        }

        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @Html.Raw(TempData["error"])
            </div>
        }
    </div>
</section>