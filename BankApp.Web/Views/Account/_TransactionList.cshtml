@model BankApp.App.ViewModels.AccountViewModel

@foreach (var transaction in Model.Transactions)
{
    <tr>
        <td>
            @transaction.Date.ToShortDateString()
        </td>
        <td>
            @transaction.TransactionId
        </td>
        <td>
            @transaction.Amount kr
        </td>
        <td>
            @transaction.Operation
        </td>
        <td>
            @transaction.Balance kr
        </td>
    </tr>
}
<tr id="buttonRow">
    <td colspan="5" align="center">
        @if (Model.CanShowMore)
        {
            <div id="spinner" class="spinner-border" style="display: none;" role="status">
                <span class="sr-only">Laddar...</span>
            </div>
            <div>
                <a data-ajax="true" data-ajax-mode="REPLACE-WITH" data-ajax-update="#buttonRow" class="btn btn-primary" 
                   asp-route-accountId="@Model.Account.AccountId" asp-route-page="@(Model.PageNumber+1)"
                   data-ajax-loading="#spinner"
                   role="button">Show more</a>
            </div>
        }
        else
        {
            <div class="alert alert-primary" role="alert">
                No more transactions.
            </div>
        }
    </td>
</tr>