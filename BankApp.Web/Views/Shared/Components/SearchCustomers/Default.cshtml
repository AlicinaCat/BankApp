@model BankApp.App.ViewModels.SearchCustomer

    <header class="masthead text-white text-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">Welcome to BankApp!</h1>
                    <h2>Start by searching a customer with name, city or customer id.</h2>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form asp-controller="Customer" asp-action="SearchCustomers" method="post">
                        <div class="form-row">
                            <div class="col-12 col-md-9 mb-2 mb-md-0">
                                <input asp-for="@Model.UserInput" type="text" class="form-control form-control-lg" placeholder="Name/City/CustomerID...">
                            </div>
                            <div class="col-12 col-md-3">
                                <button type="submit" class="btn btn-block btn-lg btn-primary">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>
